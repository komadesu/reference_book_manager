<h2 class="h3 mb-4">一覧画面</h2>

<p class="notice"><%= notice %></p>
<p class="danger"><%= alert %></p>

<%= link_to '新規作成', new_book_log_path, class: 'btn btn-primary mb-4' %>

<table class="table table-hover table-striped table-borderless">
  <thead class="thead-dark">
    <tr>
      <th>書籍名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @book_logs.each do |book_log| %>
      <tr>
        <td><%= book_log.title %></td>
        <td><%= link_to '詳細へ', book_log %></td>
        <td><%= link_to '削除', book_log_path(book_log.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

